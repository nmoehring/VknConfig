{
    "tasks": [
        {
            "type": "shell",
            "label": "(Windows) CMake Debug Build",
            "command": "${workspaceFolder}/buildScripts/windows/build_win_debug.bat",
            "options": {},
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Call CMake to configure and build entire project in debug mode."
        },
        {
            "type": "shell",
            "label": "(Windows) CMake Debug Build w/ logs",
            "command": "${workspaceFolder}/buildScripts/windows/build_win_debug.bat",
            "args": [
                "-log"
            ],
            "options": {},
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Call CMake to configure and build entire project in debug mode."
        },
        {
            "type": "shell",
            "label": "(Windows) CMake Debug Build w/ trace-log",
            "command": "${workspaceFolder}/buildScripts/windows/build_win_debug.bat",
            "args": [
                "trace-log"
            ],
            "options": {},
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Call CMake to configure and build entire project in debug mode."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}